<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="botm_view_style_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/padding15</item>
        <item name="android:padding">@dimen/padding5</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="botm_view_style_left">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">@dimen/padding5</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
